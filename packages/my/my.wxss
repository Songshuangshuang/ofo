/* projects/my/my.wxss */
.container {
  width: 100%;
  height: 100vh;
  background-color: #f2f2f2;
  font-size: 32rpx;
}
.userInfo {
  background-color: #fff; 
  padding: 60rpx;
}
.userInfo image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin: 0 auto;
  display: block;
  margin-bottom:60rpx;
  box-shadow: 0 0 3px;
}
.userInfo .user-name {
  text-align: center;
}
.wallet {
  background-color: #fff;
  padding: 40rpx;
  margin-top: 40rpx;
  display: flex;
  justify-content: space-between;
}
button {
  position: absolute;
  bottom: 60rpx;
  width: 90%;
  left: 5%;
}