/* projects/billing/billing.wxss */
.container {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}
.number,.button {
  width: 100%;
  text-align: center;
  flex: 2;
  padding: 60rpx;
}
.number {
  font-size: 32rpx;
}
.billing {
  flex: 6;
  text-align: center;
}
.billing .timer {
  font-size: 100rpx;
}
.button button {
  width: 90%;
  margin-bottom: 40rpx;
}